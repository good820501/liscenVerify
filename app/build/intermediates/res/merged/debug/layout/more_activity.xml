<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
<RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/top_" />
<ImageButton
            android:id="@+id/ImageButton01"
            android:layout_width="64dip"
            android:layout_height="39dip"
            android:layout_marginLeft="6dip"
            android:layout_marginTop="8dip"
            android:background="#00000000"
            android:padding="0dp"
            android:src="@drawable/fanhui" />
        

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dip"
            
            android:text="关于" />

        

    </RelativeLayout>
<RelativeLayout
    android:id="@+id/Container"
    android:layout_width="match_parent"
     
    android:layout_below="@+id/relativeLayout1"
    android:layout_height="match_parent" 
    android:layout_marginTop="0dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    >
 
<RelativeLayout
        android:id="@+id/MenuContainer"
        android:layout_width="match_parent"
        android:layout_height="400dip"
        android:background="@drawable/backshape"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp" >
    <RelativeLayout
        android:id="@+id/FirstRow"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="综合应急信息采集系统V1.0"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/SecondRow"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/FirstRow"
        android:background="@drawable/comback"
        android:layout_marginTop="0dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="热线电话:4001006645"
            android:textSize="15sp" />
 		<TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="网址:www.themaker.cn"
            android:textSize="15sp" />
 		<TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="邮箱:Service@themaker.cn"
            android:textSize="15sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ThirdRow"
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/SecondRow"
        android:background="@drawable/comback"
        android:layout_marginTop="-1dip" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="版权说明"
            android:textSize="15sp" />
		<TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
