<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    
    android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="69dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
         
        android:layout_marginTop="0dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="69dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/top_" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dip"
            
            android:text="行车证ocrDemo" />


    </RelativeLayout>
<com.chart.control.ScrollViewExtend  
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/relativeLayout1"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        
        android:background="#ffffff"
        android:layout_marginTop="0dp" >

        
        <RelativeLayout
            android:id="@+id/searchban"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ffffff"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" >



            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dip"
                android:text="" />

            <LinearLayout android:id="@+id/SpinContainer"
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="15dp"
                 android:layout_marginTop="5dp"
                android:orientation="horizontal"
                 android:layout_toRightOf="@+id/textView2"
                  >
     

</LinearLayout>

            

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_below="@+id/searchban"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" >



        </RelativeLayout>
		<RelativeLayout
            android:id="@+id/dcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:paddingLeft="6dp"
            
            android:paddingRight="6dp" >
        <RelativeLayout
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:paddingLeft="2dp"
             android:paddingRight="2dp" >
<RelativeLayout
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" >
   
            
            



             
                
    >

 

            
 	</RelativeLayout>
 	
 	<RelativeLayout
                android:id="@+id/ImgDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" 
                android:paddingTop="8dp" 
                android:paddingBottom="8dp" 
                
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/input" >
   <RelativeLayout
            android:id="@+id/addition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            
            android:paddingLeft="2dp"
            android:paddingTop="1dp"
            android:paddingRight="2dp" >

            <ImageView
                android:id="@+id/imgappendex"
                android:layout_width="match_parent"
                android:layout_height="205dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/backshape" />
            
        </RelativeLayout>
        <LinearLayout
        android:layout_width="fill_parent"        
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/addition"
        android:gravity="center"
        android:id="@+id/sound_file"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/speak" 
            />
        <TextView  
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show_sound"
            android:text="点击播放"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            />
       <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView3"
                android:layout_marginRight="19dp"
                android:background="#00000000"
                android:padding="0dp"
                android:src="@drawable/dustbin" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"        
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/sound_file"
        android:gravity="center"
        android:id="@+id/video_file"
       android:visibility="gone"
        >
        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/pvideo" 
            />
        <TextView  
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show_sound"
            android:text="点击播放"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            />
       <ImageButton
                android:id="@+id/imageButton12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView3"
                android:layout_marginRight="19dp"
                android:background="#00000000"
                android:padding="0dp"
                android:src="@drawable/dustbin" />
    </LinearLayout>
 				    
 				    
 				    </RelativeLayout>
            


        </RelativeLayout>
		</RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/dcontainer"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" >



            <ImageButton
                android:id="@+id/imgBtnSel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="52dp"
                android:background="#00000000"
                android:padding="0dp"
                android:src="@drawable/p_normal" />


		
        </RelativeLayout>
		
        
	<RelativeLayout
            android:id="@+id/sendbtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/bottom"
            android:background="@color/bule_overlay"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" >

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="38dp"
            android:background="#00000000"
            android:padding="0dp"
            android:src="@drawable/send_normal" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageButton4"
            android:layout_marginRight="43dp"
            android:background="#00000000"
            android:padding="0dp"
            android:src="@drawable/clear_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="1050dip"
            android:layout_marginTop="10dip"
            android:layout_below="@+id/sendbtn">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/staticView"
                android:background="@color/bule_overlay"
                android:layout_height="65dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图片数:0"
                    android:id="@+id/tcount"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dip"
                    android:layout_marginLeft="12dip"
                    android:layout_alignParentTop="true"
                      />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成功率:0%"
                    android:id="@+id/succ_rate"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dip"
                    android:layout_toRightOf="@+id/tcount"
                    android:layout_marginLeft="40dip"
                    android:layout_alignParentTop="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平均用时:0"
                    android:id="@+id/time_rate"
                    android:textColor="@color/black"
                    android:layout_below="@+id/tcount"
                    android:layout_marginTop="12dip"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="12dip"

                    />

            </RelativeLayout>

            <ListView
                android:layout_below="@+id/staticView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/listView"

                android:layout_marginTop="0dp" />
        </RelativeLayout>





        <RelativeLayout
        android:id="@+id/bottomline"
        android:layout_width="match_parent"
        android:layout_height="49dip"
        android:layout_below="@+id/listview"
   	    android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
       
        android:layout_marginTop="30dp" >

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="49dip"
            android:layout_alignParentLeft="true"
           
            android:layout_marginLeft="0dp"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/bottom_" />
        </RelativeLayout>
    </RelativeLayout>
    </com.chart.control.ScrollViewExtend>
    <Chronometer
        android:id="@+id/timedown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         
        android:textSize="18sp"
        android:textColor="@color/bule" 
        android:text="05:00" 
        android:visibility="gone"/>
<LinearLayout
        android:id="@+id/rcChat_popup"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:visibility="gone" >
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            layout="@layout/rcd_hint_window"/>"
    </LinearLayout>
</RelativeLayout>